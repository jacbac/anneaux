{# src/Anneaux/PortailBundle/Resources/views/Blog/index.html.twig #}
{% extends 'PortailBundle::layout.html.twig' %}

{% block title %}
	Blog - Les articles des Anneaux de la Mémoire
{% endblock %}

{% block body %}
  <div class="section-wrap page-wrap">
    <article class="post">
      <h1 class="post-title">Les derniers articles du blog</h1>
      {% for blog in blogs %}
        <div>
          <p>Auteur : 
            <a href="/blog/auteur/bachelier-jacques/" rel="tag">{{ blog.auteur }}</a>
          </p>
          <p>Publié le : 
            <a href="/blog/date/{{ blog.created|date('Y-m-d') }}" rel="tag">{{ blog.created|date('j F Y') }}</a>
          </p>
          <p>Mots-clefs : 
            <a href="/blog/tag/blog/" rel="tag">blogz</a> ; <a href="/blog/tag/portail/" rel="tag">portail</a>
          </p>            
        </div>
      {% endfor %}
    </article>
    <div class="pagination group">
      <p class="alignleft">
         <a href="blog/1/">&laquo; Article précédent</a>
      </p>
      <p class="alignright">
        <a href="blog/2/">Article suivant &raquo;</a>
      </p>
    </div>
  </div>
{% endblock %}
